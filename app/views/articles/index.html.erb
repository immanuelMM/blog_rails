<h1>Articles</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |articles| %>
            <tr>
                <td><%= articles.id %></td>
                <td><%= articles.author %></td>
                <td><%= articles.content %></td>
                <td><%= button_tag(link_to "Edit", edit_article_path(articles.id)) %></td>
                <td><%= button_tag(link_to "Delete", destroy_article_path(articles.id)) %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= link_to "New Article", new_article_path %>
